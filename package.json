{
  "name": "esprint",
  "version": "2.0.0",
  "description": "Parallelized eslint",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "yarn run build",
    "test": "jest tests --runInBand",
    "build": "rm -rf build && mkdir build && babel src --out-dir build",
    "prepublish": "yarn run build",
    "start": "babel --watch src --out-dir build",
    "deps": "node ./scripts/installDependencies.js",
    "create-test": "node ./scripts/create-test.js",
    "lint": "eslint src tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinterest/esprint.git"
  },
  "author": "Pinterest",
  "bugs": {
    "url": "https://github.com/pinterest/esprint/issues"
  },
  "homepage": "https://github.com/pinterest/esprint#readme",
  "dependencies": {
    "dependency-tree": "^8.0.0",
    "fb-watchman": "^2.0.1",
    "glob": "^7.1.6",
    "jayson": "^3.3.4",
    "jest-worker": "^26.6.2",
    "micromatch": "^4.0.2",
    "sane": "^4.1.0",
    "yargs": "^16.2.0"
  },
  "peerDependencies": {
    "eslint": ">=3"
  },
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "esprint": "build/cli.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chalk": "^4.1.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3"
  }
}
